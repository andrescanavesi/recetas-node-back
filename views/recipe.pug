extends layout

block content
    h1=recipe.title
    - var img = recipe.featured_image
    img(src=img, alt='recipe image').card-img-top.img-fluid
    .mt-3
      span.mr-1.lead= recipe.description  
      // Pinterest button
      - var href = "https://www.pinterest.com/pin/create/button/?url=http://recipes21.com/recipe/"+recipe.id+"/"+recipe.title_for_url+"&media="+recipe.thumbnail+"&description="+recipe.description
      a(data-pin-do='buttonPin', href=href)
        img(src='//assets.pinterest.com/images/pidgets/pinit_fg_en_round_red_16.png')

    h2.mt-3 Ingredients
    ul
      each ingr in recipe.ingredients
        li= ingr
    h2.mt-3 Directions
    ol
      each step in recipe.steps
        li= step
    
    .mt-2
      each keyword in recipe.keywords_array
        a(href=`/recipes/keyword/${keyword}`)
          span.badge.badge-pill.badge-secondary.mr-2.px-3.py-2=keyword
    if recipe.allow_edition
      .mt-2.text-right
        - var href = "/recipe/edit?id="+recipe.id
        a(href=href) Edit
