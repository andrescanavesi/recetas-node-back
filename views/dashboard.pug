extends layout-dashboard

block content
  div.mt-3
    if successMessage
        div(role='alert').alert.alert-success= successMessage
    - var action = "/dashboard/recipe/edit/"+recipe.id
    form(action=action method="POST")
            .card.mt-2.mb-5.border-0
                - var header = '['+recipe.id+']'+' '+recipe.title
                .card-header= header
                .card-body  
                    .form-group.row
                        input(name='title', type='text', placeholder='Title', value=recipe.title).form-control.form-control-sm
                    .form-group.row
                        textarea(name='description', cols="100", rows="2").form-control= recipe.description
                    .form-group.row
                        textarea(name='ingredients', cols="100", rows="10").form-control= recipe.ingredients_raw
                    .form-group.row
                        textarea(name='steps', cols="100", rows="10").form-control= recipe.steps_raw
                    .form-group.row  
                        button(type="submit" ).btn.btn-primary Save
